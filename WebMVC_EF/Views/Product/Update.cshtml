@{
}

@using WebMVC_EF.Models
@model Product

update
<form asp-controller="Product" asp-action="Update" method="post">
    <table>
        <tr>
            <td>Id</td>
            <td><input type="text" asp-for="ProductId" /></td>
        </tr>
        <tr>
            <td>Name</td>
            <td><input type="text" asp-for="ProductName" /></td>
        </tr>
        <tr>
            <td>Price</td>
            <td><input type="text" asp-for="UnitPrice" /></td>
        </tr>
        <tr>
            <td>Stock</td>
            <td><input type="text" asp-for="UnitsInStock" /></td>
        </tr>
        <tr>
            <td>Image</td>
            <td><input type="text" asp-for="Image" /></td>
        </tr>
        <tr>
            <td>Cate</td>
            <td>
                <select asp-for="CategoryId">
                    <option value="0">All</option>
                    @foreach (Category c in ViewBag.Categories)
                    {
                        <option value=@c.CategoryId>@c.CategoryName</option>
                    }
                </select>
            </td>
        </tr>
        <tr>
            <td></td>
            <td><input type="submit" value="Update" /></td>
        </tr>

    </table>

</form>
