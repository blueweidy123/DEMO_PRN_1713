@using WebMVC_EF.Models
@model List<Product>


<style>
    .f{
        /*height:100%;*/
        /*background-color:red;*/
        display:flex;
        flex-direction:column;
        align-items:center;
        justify-items:center;
    }
</style>

<section class="f">
List Categories:
<form asp-controller="Product" asp-action="Index" id="select-Cate" method="post">

        <select onchange="change()" name="cateId">
            <option value="0">All</option>
            @foreach (Category c in ViewBag.Categories)
            {
                @if (c.CategoryId == ViewBag.SelectedId)
                {
                    <option selected value=@c.CategoryId>@c.CategoryName</option>
                }
                else
                {
                    <option value=@c.CategoryId>@c.CategoryName</option>
                }

            }
        </select>
        
</form>

<script>
        function change(){
            document.getElementById("select-Cate").submit();
        }
</script>

<br />
<a asp-action="Add" asp-controller="Product">create new product</a>
<br />
List Product:
<table border="1">
    <tr>
        <td>Id</td>
        <td>Name</td>
        <td>Price</td>
        <td>Stock</td>
        <td>Image</td>
        <td>Cate</td>
    </tr>
    @foreach (Product p in Model)
    {
        <tr>
            <td>@p.ProductId</td>
            <td>@p.ProductName</td>
            <td>@p.UnitPrice</td>
            <td>@p.UnitsInStock</td>
            <td>@p.Image</td>
            <td>@p.Category.CategoryName</td>
            <td><a asp-controller="Product" asp-action="Update" asp-route-id="@p.ProductId">Update</a></td>
            <td><a asp-controller="Product" asp-action="Delete" asp-route-id="@p.ProductId">Delete</a></td>
        </tr>
    }
</table>
<br />
</section>